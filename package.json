{
  "name": "fun-league-project",
  "version": "1.0.0",
  "description": "Basketball League Management System",
  "scripts": {
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd domain && npm run dev",
    "dev:frontend": "cd client && npm run dev",
    "install:all": "npm install && cd domain && npm install && cd ../client && npm install",
    "build:backend": "cd domain && npm run build",
    "build:frontend": "cd client && npm run build",
    "build:all": "npm run build:backend && npm run build:frontend"
  },
  "keywords": [
    "basketball",
    "league",
    "management"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}